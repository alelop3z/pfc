<div class="row">
  <%= form_for(@user, :url => {:controller => :users, :action => :update, :id => @user, :type => :password}, :html => {:method => :put, :class => "form-horizontal"}) do |f| %>
    <div class="col-md-12">
      <div class="form-group">
        <label for="user_old_password"><%= t("users.old_password") %>: </label>
        <%= f.password_field :old_password, :class => "form-control" %>
      </div>

      <div class="form-group">
        <label for="user_old_password"><%= t("users.new_password") %>: </label>
        <%= f.password_field :password, :class => "form-control" %>
      </div>

      <div class="form-group">
        <label for="user_password_confirmation"><%= t("users.password_confirmation") %>: </label>
        <%= f.password_field :password_confirmation, :class => "form-control" %>
      </div>

      <div class="pull-right margin-bottom">
        <%= f.submit t("users.update"), :class => "btn btn-warning", :id => "submit-update", :title => t("users.update") %>
      </div>
    </div>
  <% end %>
</div>
