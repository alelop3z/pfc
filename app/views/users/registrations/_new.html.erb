
<%= form_for(resource, as: resource_name, url: registration_path(resource_name), :remote => true) do |f| %>
  <%= render 'shared/error_messages', target: f.object %>
  	
  <div class="form-group">
    <%= f.text_field :name, autofocus: true, class: 'form-control', placeholder: '¿Cómo te llamas?' %>
  </div>

  <div class="form-group">
	 	<%= f.email_field :email, class: 'form-control', placeholder: '¿Un email para registrarte?' %>
	</div>

  <div class="form-group">
   	<%= f.password_field :password, autocomplete: "off", class: 'form-control', placeholder: '¿Tu contraseña?' %>
  </div>

  <div class="form-group">
  	<div class="row">
  		<div class="col-xs-8">
  			<%= f.password_field :password_confirmation, autocomplete: "off", class: 'form-control', placeholder: 'Repite tu contraseña' %>
  		</div>
  		<div class="col-xs-4">
  			<%= f.submit "Registrate", :class => "btn btn-sm btn-warning pull-right" %>
  		</div>
  	</div>
  </div>
<% end %>

<hr />
<center>
    <p><strong>¿Ya tienes una cuenta?</strong></p>
    <p><%= link_to "Entra con tu usuario y contraseña", new_user_session_path, :remote => true, :class => "sign-in-link" %></p>
</center>