<%= form_for(resource, as: resource_name, url: session_path(resource_name), html: {id: "sign_in_user", remote: true}) do |f| %>
  <div id="error-explanation" class="alert alert-danger" style="display:none;"></div>

	<div class="form-group">
		<%= f.email_field :email, autofocus: true, class: 'form-control', placeholder: 'Email de usuario' %>
	</div>

  <div class="form-group">
  	<div class="row">
  		<div class="col-xs-9">
	 		  <%= f.password_field :password, autocomplete: "off", class: 'form-control', placeholder: 'Contraseña' %>
		  </div>
			<div class="col-xs-3">
				<%= f.submit "Log in", :class => "btn btn-sm btn-info pull-right" %>  	
			</div>
		</div>
  </div>

  <% if devise_mapping.rememberable? -%>
   	<div class="form-group">
   		<%= f.check_box :remember_me %> <%= f.label :remember_me, "Recuerdame" %>
   		| <%= link_to "¿Olvidaste tu contraseña?", new_user_password_path, :remote => true, :class => "btn btn-link" %>
   	</div>
  <% end -%>
<% end %>

<hr />
<center>
    <p>¿Eres nuevo en Voy en Bici?</p>
    <p><strong><%= link_to "Regístrate", new_user_registration_path, :remote => true, :class => "sign-up-link" %></strong></p>
</center>