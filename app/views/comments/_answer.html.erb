<div class="media">
  <%= link_to image_tag(answer.user_id_from_image, :alt => answer.user_id_from_name), user_path(answer.user_id_from), :title => t("users.go_to", :name => answer.user_id_from_name), :class => "pull-left" %>
  <div class="media-body">
    <p><%= link_to answer.user_id_from_name, user_path(answer.user_id_from), :title => t("users.go_to", :name => answer.user_id_from_name) %> <%= t("users.time_said") %> <%= answer.created_at.strftime("%d-%m-%Y %H:%M") %>
    <p><%= raw answer.text %></p>
  </div>
</div>