<h4 class="page-header">Eventos</h4>

<%= render "admin/events/search" %>

<div class="panel panel-default">
    <div class="panel-heading">
        Gesti√≥n de eventos
    </div>
    <div class="panel-body">
        <table class="table table-condensed">
            <tr>
                <th><%= Event.human_attribute_name(:name) %></th>
                <th><%= Event.human_attribute_name(:type) %></th>
                <th><%= Event.human_attribute_name(:init_date) %></th>
                <th class="options"><%= t("main.options") %></th>
            </tr>

            <% @events.each do |event| %>
                <tr id="event_<%= event._id %>">
                    <%= render partial: "admin/events/event", locals: {event: event} %>
                </tr>
            <% end %>
        </table>

        <%= paginate @events %>
    </div>
</div>