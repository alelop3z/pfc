<div class="panel panel-default">
    <div class="panel-heading">
    	<%= link_to raw("<i class=\"fa fa-file-excel-o\"></i>  Descargar Excel"), admin_routes_path(format: 'xls'), title: 'Descargar rutas excel', class: 'btn btn-xs btn-default pull-right' %>
    	<%= link_to raw("<i class=\"fa fa-file\"></i>  Descargar CSV"), admin_routes_path(format: 'csv'), title: 'Descargar rutas en formato CSV', class: 'btn btn-xs btn-default pull-right' %>
        Buscador de rutas 
    </div>
    <div class="panel-body">
        <%= form_tag admin_routes_path, method: 'get', class: "form-inline" do %>
			<div class="form-group">
				<%= label_tag :route_text, "Nombre", class: "sr-only" %> 
				<%= text_field_tag "route[text]", (params[:route][:text] rescue nil), class: "form-control", placeholder: "Introduzca nombre" %>
			</div>

			<div class="form-group">
				<%= label_tag :route_route_type, "Seleccione tipo de ruta", class: "sr-only" %>
				<%= select_tag "route[route_type]", options_for_select(Main.types, (params[:route][:route_type] rescue nil)), prompt: "Introduzca tipo de ruta", class: 'form-control' %> 
			</div>

			<div class="form-group">
				<%= label_tag :route_difficulty, "Seleccione dificultad", class: "sr-only" %>
				<%= select_tag "route[difficulty]", options_for_select(Main::DIFFICULTY, (params[:route][:difficulty] rescue nil)), prompt: "Introduzca la dificultad", class: 'form-control' %> 
			</div>

			<div class="form-group">
				<%= label_tag :route_private, "Â¿Ruta privada?", class: "sr-only" %>
				<%= select_tag "route[private]", options_for_select(Main.privacity, (params[:route][:private] rescue nil)), prompt: "Introduzca si es privada o no", class: 'form-control' %> 
			</div>

			<%= submit_tag "Buscar", class: "btn btn-default" %>
        <% end %>
    </div>
</div>